@model Job_Portal.Models.UserReg
@{
    ViewBag.Title = "UserReg_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration Form</h2>
<div>
    @using (Html.BeginForm("UserReg_Click", "UserReg", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <label>Name:</label>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label>Age:</label>
            @Html.TextBoxFor(m => m.age)
            @Html.ValidationMessageFor(m => m.age)
        </div>
        <div>
            <label>Gender:</label>
            Male
            @Html.RadioButtonFor(model => model.gender, "Male")
            Female
            @Html.RadioButtonFor(model => model.gender, "Female")
            Others
            @Html.RadioButtonFor(model => model.gender, "Others")
        </div>
        <div>
            <label>Email:</label>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>
        <div>
            <label>Phone:</label>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>
        <div>
            <label>Address:</label>
            @Html.TextAreaFor(m => m.address)
            @Html.ValidationMessageFor(m => m.address)
        </div>
        <div>
            <label>State:</label>
            @Html.DropDownList("Selstates", (SelectList)ViewBag.SelState, "--Select--", new { @class = "form-control" })
        </div>
        <div>
            <label>Qualification:</label>
            @foreach (var item in Model.MyQual)
             {
               <label>
                  <input type="checkbox" value="@item.Q_Text" checked="@item.Ischecked" name="selQual" id="@item.Q_Id" />@Html.Raw(item.Q_Text)
               </label>
             }
        </div>
        <div>
            <label>Skills:</label>
            @Html.TextAreaFor(m => m.skills)
            @Html.ValidationMessageFor(m => m.skills)
        </div>
        <div>
            <label>Experience:</label>
            @Html.TextAreaFor(m => m.experience)
            @Html.ValidationMessageFor(m => m.experience)
        </div>
        <div>
            <label>Resume:</label>
            @Html.TextBox("file", "", new { Type = "file" })
        </div>
        <div>
            <label>Username:</label>
            @Html.TextBoxFor(m => m.username)
        </div>
        <div>
            <label>Password:</label>
            @Html.PasswordFor(m => m.password)
        </div>
        <div>
            <label>Confirm Password:</label>
            @Html.PasswordFor(m => m.confirmPassword)
            @Html.ValidationMessageFor(m => m.confirmPassword)
        </div>
        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.message)
        </div>
    }
</div>

